<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utcn.calculatoare.tp.controllers.Controller">
    <top>
        <HBox alignment="CENTER">
            <Label prefHeight="55.0" prefWidth="230.0" text="Calculator Polynomial" textAlignment="CENTER" textFill="#0036ff">
                <font>
                    <Font size="24.0" />
                </font>
                <opaqueInsets>
                    <Insets top="10.0" />
                </opaqueInsets>
            </Label>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
        </HBox>
    </top>

    <left>
        <VBox alignment="CENTER" prefHeight="305.0" prefWidth="314.0">
            <HBox prefHeight="72.0" prefWidth="285.0">
                <VBox alignment="TOP_CENTER" spacing="10">
                    <Label text="Polynomial1:" textFill="#ff0101" />
                    <TextField fx:id="polynomial1" prefHeight="32.0" prefWidth="295.0">
                        <VBox.margin>
                            <Insets bottom="20.0" left="10.0" right="10.0" />
                        </VBox.margin>
                  <font>
                     <Font size="14.0" />
                  </font>
                    </TextField>
                </VBox>
            </HBox>
            <HBox>
                <VBox alignment="TOP_CENTER" spacing="10">
                    <Label text="Polynomial2:" textFill="#f50101" />
                    <TextField fx:id="polynomial2" prefHeight="25.0" prefWidth="343.0">
                        <VBox.margin>
                            <Insets bottom="20.0" left="10.0" right="10.0" />
                        </VBox.margin>
                  <font>
                     <Font size="14.0" />
                  </font>
                    </TextField>
                </VBox>
            </HBox>
         <BorderPane.margin>
            <Insets bottom="40.0" />
         </BorderPane.margin>
        </VBox>
    </left>
    <center>
        <VBox>
            <HBox alignment="CENTER">
                <Button fx:id="add" onAction="#handleClickAdd" text="+" textAlignment="CENTER" textFill="#3207f5">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
               <font>
                  <Font size="30.0" />
               </font></Button>
                <Button fx:id="sub" onAction="#handleClickSub" text="-" textAlignment="CENTER" textFill="RED">
               <font>
                  <Font size="30.0" />
               </font></Button>
            <VBox.margin>
               <Insets bottom="10.0" top="20.0" />
            </VBox.margin>
            </HBox>
            <HBox alignment="TOP_CENTER">
                <Button fx:id="mul" onAction="#handleClickMul" text="*" textAlignment="CENTER" textFill="#0a06ff">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
               <font>
                  <Font size="30.0" />
               </font></Button>
                <Button fx:id="div" onAction="#handleClickDiv" text="/" textAlignment="CENTER" textFill="RED">
               <font>
                  <Font size="30.0" />
               </font></Button>
            <VBox.margin>
               <Insets bottom="10.0" top="10.0" />
            </VBox.margin>
            </HBox>
            <HBox alignment="TOP_CENTER">
                <Button fx:id="der" onAction="#handleClickDer" text="f'" textFill="#1207eb">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
               <font>
                  <Font size="30.0" />
               </font></Button>
                <Button fx:id="inte" onAction="#handleClickInte" text="S" textFill="#f20000">
               <font>
                  <Font size="30.0" />
               </font></Button>
            <VBox.margin>
               <Insets bottom="10.0" top="10.0" />
            </VBox.margin>
            </HBox>
        </VBox>
    </center>

    <right>
        <VBox alignment="CENTER" prefHeight="305.0" prefWidth="296.0">
            <HBox>
                <VBox alignment="TOP_CENTER" spacing="10">
                    <Label fx:id="resultText1" text="Result:" textFill="#0010ee" />
                    <TextField fx:id="result1" prefHeight="25.0" prefWidth="336.0">
                        <VBox.margin>
                            <Insets bottom="20.0" left="10.0" right="10.0" />
                        </VBox.margin>
                  <font>
                     <Font size="14.0" />
                  </font>
                    </TextField>
                </VBox>
            </HBox>
            <HBox>
                <VBox alignment="TOP_CENTER" spacing="10">
                    <Label fx:id="resultText2" text="Result2:" textFill="#072deb" />
                    <TextField fx:id="result2" prefHeight="25.0" prefWidth="327.0">
                        <VBox.margin>
                            <Insets bottom="20.0" left="10.0" right="10.0" />
                        </VBox.margin>
                  <font>
                     <Font size="14.0" />
                  </font>
                    </TextField>
                </VBox>
            </HBox>
            <BorderPane.margin>
                <Insets bottom="40.0" />
            </BorderPane.margin>
        </VBox>
    </right>
</BorderPane>
